{
  "useConfigFiles": true,
  "plugins": {
    "@vue/cli-plugin-babel": {},
    "@vue/cli-plugin-eslint": {
      "config": "base",
      "lintOn": [
        "save"
      ]
    }
  },
  "configs": {
    "vue": {
      "css": {
        "loaderOptions": {
          "sass": {
            "includePaths": ["./node_modules"]
          }
        }
      }
    }
  },
  "router": true,
  "routerHistoryMode": false,
  "vuex": true,
  "cssPreprocessor": "sass"
}
